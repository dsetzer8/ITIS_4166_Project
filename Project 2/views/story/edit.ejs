<head>
    <title> Edit </title>
    <%- include('../partials/header.ejs')%>
</head>

<div class = "content">
    <form method = 'POST' action = "/connections/<%=connection._id%>?_method=PUT">
        <table>
            <tr>
                <td><label for="title">Title</label></td>
                <td><input type="text" id="title" name="title" value = "<%= connection.title%>" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td><label for="author">Author</label></td>
                <td><input type="text" id="author" name="author" value = "<%= connection.author%>" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td><label for="category">Category</label></td>
                <td><input type="text" id="category" name="category" value = "<%= connection.category%>" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td class = "align-top"><label for="location">Location</label></td>
                <td><input type="text" id="location" name="location" value = "<%= connection.location%>" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td class = "align-top"><label for="details">Details</label></td>
                <td><textarea id=resize cols="40" rows="6" id="details" name="details" class ="fixed-width" required minlength="10"><%= connection.details%></textarea></td>
            </tr>
            <tr>
                <td class = "align-top"><label for="image">Image URL: </label></td>
                <td><input type="file" id="image" name="image" class = "fixed-width"required> <%= connection.image%> </td>  
            </tr>
            <tr>
                <td colspan="2" class = "align-right"><button>Submit</button></td>
            </tr>
        </table>        
    </form>

    </div>
    <%- include('../partials/footer.ejs')%>

    